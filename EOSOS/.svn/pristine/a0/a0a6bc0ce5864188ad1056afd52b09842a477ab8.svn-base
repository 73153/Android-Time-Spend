<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >


    <com.eosos.customviews.IjoomerTextView
        android:id="@+id/center"
        style="?textview_blue_h4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/days_open"
        android:textColor="@color/txt_header"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@id/center">
        <ImageView
            android:id="@+id/imgM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="M"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relTu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/relM"
        android:layout_toRightOf="@id/relM"
        android:layout_marginTop="-50dp">
        <ImageView
            android:id="@+id/imgTu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtTu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tu"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relSu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relM"
        android:layout_toLeftOf="@id/relM"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-50dp" >
        <ImageView
            android:id="@+id/imgSu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtSu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Su"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relWe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/relTu"
        android:layout_toRightOf="@id/center" >
        <ImageView
            android:id="@+id/imgWe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtWe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relTh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/relWe"
        android:layout_toLeftOf="@id/relWe"
        android:layout_marginRight="-40dp">
        <ImageView
            android:id="@+id/imgTh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtTh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Th"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relSa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/relSu"
        android:layout_toLeftOf="@id/center" >
        <ImageView
            android:id="@+id/imgSa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtSa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sa"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relFr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/relSa"
        android:layout_toRightOf="@id/relSa"
        android:layout_marginLeft="-40dp">
        <ImageView
            android:id="@+id/imgFr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/circle"/>
        <com.eosos.customviews.IjoomerTextView
            android:id="@+id/txtFr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fr"
            android:layout_centerInParent="true"
            android:textColor="@color/darkgray" />
    </RelativeLayout>
</RelativeLayout>