<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shadow_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/large_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ijoomer.tips.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_app_content_one"
                android:textSize="@dimen/large_text_size"
               android:scrollbars="none"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <com.ijoomer.tips.customviews.CustomEditTex
                android:id="@+id/edtShareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/share_app_content_second"
                android:textSize="@dimen/medium_text_size"
                android:background="@drawable/edittext"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/medium_margin"
                android:gravity="center_vertical"
                android:lines="4"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnShareEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/share_via_email"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginBottom="@dimen/large_margin"
                android:background="@drawable/pink_button_selector"/>

            <Button
                android:id="@+id/btnShareSms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/share_via_sms"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/pink_button_selector"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
