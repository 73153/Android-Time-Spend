<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?sobipro_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/sobipro_search_title_bg"
            android:gravity="center">

            <com.mycadiz.customviews.IjoomerTextView
                android:id="@+id/txtTitle"
                style="@style/sobipro_textview_white_h4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/com_facebook_close"
                android:layout_gravity="top|right"/>
            </LinearLayout>
        <com.mycadiz.customviews.IjoomerListView
            android:id="@+id/lstEntries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:cacheColorHint="@null"
            android:divider="@color/bg_color"
            android:dividerHeight="0dp"
            android:listSelector="@null"
            android:smoothScrollbar="true" />


</LinearLayout>