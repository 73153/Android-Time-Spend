<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrMapInfoWindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/ijoomer_map_popup_blue">

    <ImageView
        android:id="@+id/imgEntryIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sobipro_default_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <com.mycadiz.customviews.IjoomerTextView
            android:id="@+id/txtTitlePopup"
            style="?sobipro_textview_h3"
            android:textColor="@color/sobipro_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <com.mycadiz.customviews.IjoomerTextView
            android:id="@+id/txtAddressPopup"
            style="?sobipro_textview_h2"
            android:textColor="@color/sobipro_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2" />
    </LinearLayout>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ijoomer_map_popup_arrow"
        android:adjustViewBounds="true"/>
</LinearLayout>
