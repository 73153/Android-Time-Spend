<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ijoomer.intafy.src"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrLeftNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.ijoomer.customviews.RoundedImageView
                android:id="@+id/imgLeftNetworkIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                app:is_oval="false"
                app:corner_radius="360dp"
                app:border_color="@color/blue"/>
            <ProgressBar
                android:id="@+id/pbrLeftImageLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lnrLeftClickable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:background="@drawable/list_item_box_left"
            android:gravity="center_vertical|right">

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftNetworkTitle"
                style="?textview_blue_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:scrollbars="none"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrRightNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/lnrRightClickable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/list_item_box_right"
            android:gravity="center_vertical">

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtRightNetworkTitle"
                style="?textview_blue_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:scrollbars="none"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.ijoomer.customviews.RoundedImageView
                android:id="@+id/imgRightNetworkIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                app:is_oval="false"
                app:corner_radius="360dp"
                app:border_color="@color/blue"/>
            <ProgressBar
                android:id="@+id/pbrRightImageLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>