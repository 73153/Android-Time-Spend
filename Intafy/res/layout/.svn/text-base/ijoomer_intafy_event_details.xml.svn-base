<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ijoomer.intafy.src"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    style="?background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ijoomer.customviews.RoundedImageView
            android:id="@+id/imgEventAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:corner_radius="360dp"
            android:layout_centerInParent="true"
            app:is_oval="false"
            app:border_color="@color/blue"
            android:scaleType="fitXY"/>
        <ProgressBar
            android:id="@+id/pbrImageLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/imgEventSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/save_btn"
            android:layout_marginLeft="-10dp"
            android:visibility="gone"
            android:layout_below="@id/imgEventAvatar"
            android:layout_toRightOf="@id/imgEventAvatar"/>
        <ImageView
            android:id="@+id/imgEventInvite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/invite_icon_en"
            android:layout_marginRight="-10dp"
            android:visibility="gone"
            android:layout_below="@id/imgEventAvatar"
            android:layout_toLeftOf="@id/imgEventAvatar"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtEventTitle"
                style="?textview_blue_h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtEventDate"
                style="?textview_white_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtEventTime"
                style="?textview_white_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtEventDescription"
                style="?textview_white_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp"/>

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtEventAttending"
                style="?textview_white_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtEventAddress"
                style="?textview_blue_h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgEditEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:src="@drawable/edit_icon_en"/>
        <ImageView
            android:id="@+id/imgExportEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:src="@drawable/export_btn"/>
        <ImageView
            android:id="@+id/imgDeleteEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:src="@drawable/delete_icon_en"/>
    </LinearLayout>
</LinearLayout>