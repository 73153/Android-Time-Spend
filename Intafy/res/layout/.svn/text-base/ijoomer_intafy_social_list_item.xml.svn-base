<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ijoomer.intafy.src"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_thread_list_item_box"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp">
        <com.ijoomer.customviews.RoundedImageView
            android:id="@+id/imgSocialUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            app:is_oval="false"
            app:corner_radius="360dp"
            app:border_color="@color/blue"/>
            <ProgressBar
                android:id="@+id/pbrImageLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/imgFacebookOrTwitter"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftSocialUserName"
                style="?textview_white_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftSocialTitleAndContent"
                style="?textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftSocialDate"
                style="?textview_blue_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>