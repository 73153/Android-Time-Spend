<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrLeftMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/message_thread_list_item_box">

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftUserName"
                style="?textview_blue_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftMessage"
                style="?textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            <com.ijoomer.customviews.IjoomerVoiceButton
                android:id="@+id/btnLeftSentMessagePlayVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <RelativeLayout
                android:id="@+id/relLeftImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/imgLeftMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"/>
                <ProgressBar
                    android:id="@+id/pbrLeftImageLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtLeftMessageDate"
                style="?textview_blue_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrRightMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/message_thread_list_item_box">

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtRightUserName"
                style="?textview_blue_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtRightMessage"
                style="?textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            <com.ijoomer.customviews.IjoomerVoiceButton
                android:id="@+id/btnRightSentMessagePlayVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <RelativeLayout
                android:id="@+id/relRightImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">
            <ImageView
                android:id="@+id/imgRightMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>
             <ProgressBar
                 android:id="@+id/pbrRightImageLoad"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"/>
            </RelativeLayout>
            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtRightMessageDate"
                style="?textview_blue_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>